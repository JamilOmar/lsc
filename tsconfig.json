{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir":"./",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist",
    "templates"
  ]
}
